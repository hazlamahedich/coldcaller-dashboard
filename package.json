{
  "name": "coldcaller-comprehensive-testing",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for Cold Calling Dashboard with 200+ test cases",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run build && serve -s build -l 3000",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules && rm -rf backend/node_modules && rm -rf frontend/node_modules",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "setup": "npm run install:all && npm run db:migrate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:frontend": "jest --selectProjects=\"Frontend Tests\"",
    "test:backend": "jest --selectProjects=\"Backend Tests\"",
    "test:integration": "jest --selectProjects=\"Integration Tests\"",
    "test:performance": "jest --selectProjects=\"Performance Tests\"",
    "test:security": "jest --selectProjects=\"Security Tests\"",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:ci": "cypress run --record --parallel",
    "test:all": "npm run test:ci && npm run test:e2e",
    "test:smoke": "cypress run --spec=\"cypress/e2e/smoke/**/*\"",
    "test:regression": "npm run test:all",
    "coverage:report": "jest --coverage && opener coverage/index.html",
    "coverage:sonar": "jest --coverage --testResultsProcessor=jest-sonar-reporter",
    "lint": "eslint frontend/src backend/src --ext .js,.jsx",
    "lint:fix": "eslint frontend/src backend/src --ext .js,.jsx --fix",
    "validate": "npm run lint && npm run test:ci",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "setup-twilio": "node scripts/setup-twilio.js",
    "test:twilio": "curl http://localhost:3001/api/twilio/health || echo 'Backend server not running on port 3001'"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/plugin-proposal-class-properties": "^7.18.0",
    "@babel/plugin-proposal-private-methods": "^7.18.0",
    "@babel/plugin-transform-runtime": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@cypress/code-coverage": "^3.12.0",
    "@testing-library/cypress": "^10.0.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "axe-core": "^4.8.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.0",
    "cypress-axe": "^1.5.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-real-events": "^1.11.0",
    "eslint": "^8.56.0",
    "eslint-plugin-cypress": "^2.15.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.0",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^15.2.0",
    "mochawesome": "^7.1.3",
    "opener": "^1.5.2",
    "serve": "^14.2.1",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "@twilio/voice-sdk": "^2.15.0",
    "axios": "^1.11.0",
    "express": "^4.18.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "twilio": "^5.8.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "jest --findRelatedTests --passWithNoTests"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "testing",
    "qa",
    "jest",
    "cypress",
    "cold-calling",
    "dashboard",
    "comprehensive-testing",
    "voip",
    "audio-testing",
    "security-testing",
    "performance-testing",
    "e2e-testing",
    "integration-testing",
    "accessibility-testing"
  ],
  "author": "Testing & QA Engineer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/coldcaller/comprehensive-testing-suite"
  },
  "bugs": {
    "url": "https://github.com/coldcaller/comprehensive-testing-suite/issues"
  },
  "homepage": "https://github.com/coldcaller/comprehensive-testing-suite#readme"
}
